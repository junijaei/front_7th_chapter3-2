{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Mapping */
    "paths": {
      "@/components/*": [
        "./src/origin/components/*",
        "./src/basic/components/*",
        "./src/advanced/components/*"
      ],
      "@/hooks/*": [
        "./src/origin/hooks/*",
        "./src/basic/hooks/*",
        "./src/advanced/hooks/*"
      ],
      "@/models/*": [
        "./src/origin/models/*",
        "./src/basic/models/*",
        "./src/advanced/models/*"
      ],
      "@/utils/*": [
        "./src/origin/utils/*",
        "./src/basic/utils/*",
        "./src/advanced/utils/*"
      ],
      "@/constants/*": [
        "./src/origin/constants/*",
        "./src/basic/constants/*",
        "./src/advanced/constants/*"
      ],
      "@/types/*": [
        "./src/origin/types/*",
        "./src/basic/types/*",
        "./src/advanced/types/*"
      ],
      "@/types": [
        "./src/origin/types",
        "./src/basic/types",
        "./src/advanced/types"
      ],
      "@/pages/*": [
        "./src/origin/pages/*",
        "./src/basic/pages/*",
        "./src/advanced/pages/*"
      ],
      "@/*": ["./src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
