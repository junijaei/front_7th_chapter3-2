{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/basic/components/*", "./src/advanced/components/*"],
      "@/hooks/*": ["./src/basic/hooks/*", "./src/advanced/hooks/*"],
      "@/models/*": ["./src/basic/models/*", "./src/advanced/models/*"],
      "@/utils/*": ["./src/basic/utils/*", "./src/advanced/utils/*"],
      "@/constants/*": ["./src/basic/constants/*", "./src/advanced/constants/*"],
      "@/*": ["./src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
